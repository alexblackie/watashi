body {
  overflow-x: hidden;
}

#siteHeader {
  border: none;
  position: relative;
  z-index: 8192;
}

#siteContent {
  padding: 0;
}

.intro {
  position: relative;
  padding: 2.5em 0 4em;
  color: #bababa;
  font-size: 1.25em;
  font-family: "Source Code Pro", monospace;
  line-height: 1.6em;
}
  .intro p {
    position: relative;
    z-index: 8192;
    margin: 0 3em;
  }
  .intro a:active {
    background-color: rgba(0,0,0, 0.3);
  }
  .intro .intro-lead {
    margin: 0 0 0.5em;
  }
  .intro .intro-lead::before {
    content: ">_";
    color: #fff;
    font-size: 2em;
    line-height: 0;
  }

.home-two-up {
  display: flex;
}
.home-two-up .column {
  box-sizing: border-box;
}
  .home-two-up .column h2 {
    margin-top: 0;
  }
  .home-two-up dt,
  .home-two-up dd {
    padding: 5px;
    border-bottom: 1px solid #f3f3f3;
  }
  .home-two-up dt {
    float: left;
    width: 25%;
    font-weight: bold;
  }
  .home-two-up dd {
    margin: 0;
  }

.home-articles {
  width: 60%;
  padding: 4em;
  background-color: #efefef;
}
  .home-articles header {
    overflow: hidden;
  }
  .home-articles h2 {
    float: left;
  }
.home-articles-rss {
  float: right;
  border: none;
}
  .home-articles-rss svg {
    width: 24px;
    height: 24px;
  }
  .home-articles-rss:hover svg path {
    fill: #d33d5d;
  }

.home-contact {
  width: 40%;
  padding: 4em 0 0 2em;
  background-color: white;
}

ol.article-list {
  margin: 0;
  padding: 0;
  width: 100%;
  border: 0;
  list-style: none;
}
  .article-list a {
    display: block;
    padding: 5px 0;
    border-bottom: 1px solid #e3e3e3;
    text-decoration: none;
  }
  .article-list li {
    overflow: hidden;
  }

.article-list-date {
  float: left;
  width: 21%;
  color: #888;
}

.article-list-pagination {
  overflow: auto;
  padding-top: 1em;
}
.article-list-pagination-next {
  float: right;
}
.article-list-pagination-previous {
  float: left;
}


/*******************************************************************************
 * Media Queries
 ******************************************************************************/

@media screen and (max-width: 880px) {
  .intro {
    font-size: 1em;
    padding: 0 1em 3em;
  }
    .intro .intro-lead {
      position: relative;
    }
      .intro .intro-lead::before {
        display: none;
      }

    .intro p {
      margin-left: 0;
    }

  .home-two-up {
    flex-direction: column;
  }
  .home-two-up .column {
    width: auto;
  }

  .home-articles {
    padding: 2em 0.5em;
  }

  .home-contact {
    padding-top: 3em;
  }

  .article-list li a,
  .home-two-up dt,
  .home-two-up dd {
    padding: 0.75em 0;
  }

  .article-list-date {
    width: 30%;
  }
  .article-list-title {
    margin-left: 31%;
  }
}

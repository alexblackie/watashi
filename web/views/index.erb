<div class="container">
  <div class="home-two-up">
    <div class="column home-articles">
      <h2>Things I've Written</h2>

      <ol class="article-list">
      <% articles.each do |article| %>
        <li>
          <a href="/articles/<%= article.slug %>">
            <div class="article-list-date"><%= article.date %></div>
            <div class="article-list-title">
                <%= article.title %>
            </div>
          </a>
        </li>
      <% end %>
      </ol>
      <nav class="article-list-pagination">
        <% if (current_page - 1) >= 0 %>
          <a class="article-list-pagination-previous" href="?page=<%= current_page - 1 %>">&larr; Newer</a>
        <% end %>
        <% if (current_page + 1) <= total_pages %>
          <a class="article-list-pagination-next"  href="?page=<%= current_page + 1 %>">Older &rarr;</a>
        <% end %>
      </nav>
    </div>


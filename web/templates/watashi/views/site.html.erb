<!doctype html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title><%= local(:page_title) %> | Alex Blackie</title>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Overpass:400,700|Fira+Mono:400,700"
    type="text/css">
  <link rel="stylesheet" href="/assets/css/site.css" type="text/css">
  <% (local(:stylesheets) || []).each do |name| %>
  <link rel="stylesheet" href="/assets/css/<%= name %>.css" type="text/css">
  <% end %>
  <link rel="alternate" type="application/rss+xml" title="Alex Blackie's Blog" href="/rss.xml"/>

  <% if local(:og_meta) %>
    <% og_meta = local(:og_meta) %>
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= og_meta["title"] %>">
    <meta name="twitter:description" content="<%= og_meta["description"] %>">
    <meta name="twitter:image" content="<%= og_meta["image"] %>">

    <meta property="og:title" content="<%= og_meta["title"] %>">
    <meta property="og:type" content="article">
    <meta property="og:url" content="<%= og_meta["permalink"] %>">
    <meta property="og:description" content="<%= og_meta["description"] %>">
    <meta property="og:image" content="<%= og_meta["image"] %>">
    <meta property="article:published_time" content="<%= og_meta["published_time"] %>">
  <% end %>

</head>
<body<% if local(:body_class) %> class="<%= local(:body_class) %>"<% end %>>

  <header id="siteHeader">
    <div class="container">
      <div id="siteBrand">
        <h1><a href="/">Alex Blackie</a></h1>
        <div>The Internet Sensation&trade;</div>
      </div>

      <nav id="siteNav">
        <ul>
          <li id="siteNav-home"><a href="/">Articles</a></li>
          <li id="siteNav-photos"><a href="/albums">Photos</a></li>
          <li id="siteNav-setup"><a href="/setup">My Setup</a></li>
          <li id="siteNav-about"><a href="/about">About Me</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <div id="siteContent">
    <% unless local(:full_width) %><div class="container"><% end %>
      <%= yield %>
    <% unless local(:full_width) %></div><% end %>
  </div>

  <footer id="siteFooter">
    <div class="container">
      &copy; 2013-2019 Alex Blackie.<br>
      This site is <a href="https://github.com/alexblackie/watashi">open source</a>! Code released under a BSD-style License; content licensed under <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/">CC BY-NC-SA</a>.
    </div>
  </footer>

  <% (local(:javascripts) || []).each do |name| %>
    <script src="/assets/js/<%= name %>.js"></script>
  <% end %>

</body>
